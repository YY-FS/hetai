[32m+[m[32m            $row->cell('operation')->value = $this->getFrameBtn($link, $options, true);[m
[32m+[m[32m        });[m
[32m+[m
[32m+[m[32m        if (Input::get('export') == 1) {[m
[32m+[m[32m            $grid->build();[m
[32m+[m[32m            return $grid->buildCSV($title, 'Ymd');[m
[32m+[m[32m        } else {[m
