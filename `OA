[32m+[m[32m        $filter->add('created_at', '申请时间', 'daterange')[m
[32m+[m[32m            ->scope(function ($query, $value) {[m
[32m+[m[32m                $value = explode('|', $value);[m
[32m+[m[32m                if (!empty($value[0]))[m
[32m+[m[32m                    $query = $query->where('created_at', '>=', $value[0]);[m
[32m+[m[32m                if (!empty($value[1])) {[m
[32m+[m[32m                    $value[1] = date('Y-m-d', strtotime($value[1]) + 24 * 60 * 60);[m
[32m+[m[32m                    $query = $query->where('created_at', '<=', $value[1]);[m
[32m+[m[32m                }[m
[32m+[m[32m                return $query;[m
[32m+[m[32m            })->format('Y-m-d', 'zh-CN');[m
[32m+[m[32m        $filter->add('uid', 'UID', 'number');[m
[32m+[m[32m        $filter->add('invoice_title', '发票抬头', 'text');[m
[32m+[m[32m        $filter->add('invoice_no', '税号', 'text');[m
[32m+[m[32m        $filter->add('contact_name', '联系人', 'text');[m
[32m+[m[32m        $filter->add('contact', '联系方式', 'number');[m
[32m+[m[32m        $filter->submit('筛选');[m
[32m+[m[32m        $filter->reset('重置');[m
[32m+[m[32m        $filter->build();[m
[32m+[m
[32m+[m[32m        $grid = DataGrid::source($filter);[m
[32m+[m[32m        $grid->attributes(array("class" => "table table-bordered table-striped table-hover"));[m
[32m+[m[32m        $grid->add('id', 'ID', true);[m
[32m+[m[32m        $grid->add('status', '状态', false);[m
[32m+[m[32m        $grid->add('created_at', '申请日期', true);[m
[32m+[m[32m        $grid->add('uid', 'UID', false);[m
[32m+[m[32m        $grid->add('invoice_title', '发票抬头', false);[m
[32m+[m[32m        $grid->add('invoice_no', '税号', false);[m
[32m+[m[32m        $grid->add('contact_name', '联系人', false);[m
[32m+[m[32m        $grid->add('contact', '联系方式', false);[m
[32m+[m[32m        $grid->add('reason', '备注', false);[m
[32m+[m[32m        $grid->add('operation', '操作', false);[m
